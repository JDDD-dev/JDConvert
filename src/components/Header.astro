---
import { getLangFromUrl, useTranslations } from "@/i18n/utils"
import { getRelativeLocaleUrl } from "astro:i18n"
import { ModeToggle } from "@/components/ThemeToggle"

const lang = getLangFromUrl(Astro.url)

const t = useTranslations(lang)
---

<header
	class="flex content-center gap-5 border-b-2 border-red-300 bg-white bg-opacity-40 p-5 dark:bg-black"
>
	<a
		href={getRelativeLocaleUrl(lang)}
		class="flex content-center hover:text-gray-900 hover:dark:text-gray-600"
	>
		<svg
			xmlns="http://www.w3.org/2000/svg"
			fill="none"
			viewBox="0 0 24 24"
			stroke-width="2"
			stroke="currentColor"
			class="h-10 w-10"
		>
			<path
				stroke-linecap="round"
				stroke-linejoin="round"
				d="M7.5 21 3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5"></path>
		</svg>
		<h1 class="text-4xl font-bold">
			{t("index.title")}
		</h1>
	</a>
	<div class="ml-auto">
		<ModeToggle client:load />
	</div>
</header>
